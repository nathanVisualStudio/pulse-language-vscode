{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pulse",
  "scopeName": "source.pulse",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#entity-declaration" },
    { "include": "#state-declaration" },
    { "include": "#event-keywords" },
    { "include": "#functions" },
    { "include": "#strings" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pulse",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pulse",
          "match": "\\b(entity|state|on|if|else|while|return)\\b"
        }
      ]
    },
    "entity-declaration": {
      "patterns": [
        {
          "match": "\\b(entity)\\s+(\\w+)",
          "captures": {
            "1": {
              "name": "keyword.control.pulse"
            },
            "2": {
              "name": "entity.name.type.pulse"
            }
          }
        }
      ]
    },
    "state-declaration": {
      "patterns": [
        {
          "match": "\\b(state)\\s+(\\w+)",
          "captures": {
            "1": {
              "name": "keyword.control.pulse"
            },
            "2": {
              "name": "entity.name.function.pulse"
            }
          }
        }
      ]
    },
    "event-keywords": {
      "patterns": [
        {
          "name": "constant.language.pulse",
          "match": "\\b(SPAWN|TICK|DIE|INTERACT|UPDATE)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(print|move|attack|heal|spawn)\\b(?=\\s*\\()",
          "name": "support.function.pulse"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pulse",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pulse",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.pulse",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}