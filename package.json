{
  "name": "pulse-language",
  "displayName": "Pulse Language Support",
  "description": "Syntax highlighting and language support for Pulse game scripting language",
  "version": "0.1.0",
  "publisher": "nathan-giunta",
  "author": {
    "name": "Nathan Giunta",
    "url": "https://github.com/nathanVisualStudio"
  },
  "icon": "images/pulse-logo.png",
  "galleryBanner": {
    "color": "#7B1FA2",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanVisualStudio/pulse-language-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/nathanVisualStudio/pulse-language-vscode/issues"
  },
  "homepage": "https://github.com/nathanVisualStudio/pulse-language-vscode#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "pulse",
    "game",
    "scripting",
    "language",
    "syntax highlighting"
  ],
  "contributes": {
    "languages": [{
      "id": "pulse",
      "aliases": ["Pulse", "pulse"],
      "extensions": [".ps"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "./images/punkv2.svg",
        "dark": "./images/punkv2.svg"
      }
    }],
    "grammars": [{
      "language": "pulse",
      "scopeName": "source.pulse",
      "path": "./syntaxes/pulse.tmLanguage.json"
    }]
  }
}
